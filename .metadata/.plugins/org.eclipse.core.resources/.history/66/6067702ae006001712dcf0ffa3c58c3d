#include <iostream>
#include <map>
#include <string>
using namespace std;

int main() {
	map<string,int> quiz;
	quiz["Paul"] = 20;
	quiz["Alex"] = 30;
	quiz["Steve"] = 40;
	quiz["Max"] = 50;
	quiz["Paul"] = 30;

	map<string, int>::iterator it;
	for(it = quiz.begin(); it != quiz.end(); it++)
	{
		cout<<it->first<<" "<<it->second<<endl;
	}
	cout<<"Size : "<<endl;
	quiz.erase("Paul");

	cout<<"--------------------"<<endl;

	for(it = quiz.begin(); it != quiz.end(); it++)
	{
		cout<<it->first<<" "<<it->second<<endl;
	}

	return 0;
}
