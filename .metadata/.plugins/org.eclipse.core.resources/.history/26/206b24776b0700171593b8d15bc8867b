#include <iostream>
using namespace std;

struct node
{
	int Key;
	node * next;
};

class Stack
{
private:
	node * front;
	node * rear;

public:
	Stack();
	void push(int key);
	void pop();
	void PrintStack();
};

Stack::Stack()
{
	front = NULL;
	rear = NULL;
}

void Stack::push(int key)
{
	node * n = new node();
	n->Key = key;

	if(front == NULL)
	{
		front = n;
		rear = n;
		n->next = NULL;
	}
	else
	{
		n->next = front;
		front = n;
	}
}

void Stack::pop()
{
	node * delPtr = new node();

	if(front == NULL)
	{
		cout<<"Stack is Empty"<<endl;
	}
	else
	{
		delPtr = front;
		front = front->next;
	}

	delete delPtr;
}

int main() {
	Stack S1;

	cout<<"Testing PUSH"<<endl;
	S1.push(5);

	return 0;
}
