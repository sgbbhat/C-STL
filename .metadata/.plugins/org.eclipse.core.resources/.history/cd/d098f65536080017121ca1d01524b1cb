#ifndef HASH_H_
#define HASH_H_

#include<iostream>
#include<string>
#include<cstdlib>

using namespace std;

class HashTable
{
private:
	int TableSize = 10;
public:
	int HashFunction(string key);
};

int HashTable::HashFunction(string name)
{
	int hashNumber = 0;

	for(unsigned i=0; i< name.length(); i++)
	{
		hashNumber += (int) name[i];
	}

	return hashNumber % MAX_SIZE;
}

#endif /* HASH_H_ */
